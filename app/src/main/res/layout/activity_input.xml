<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cynda.calculator.InputActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/inputText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:digits="0123456789#."
        android:hint="Input numbers with only a # between them."
        android:textSize="16sp"
        android:textAlignment="center" />

    <Button
        android:text="Sum \n of above #'s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sumBT"
        android:layout_below="@+id/inputText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sumBT2"
        android:layout_alignEnd="@+id/sumBT2" />

    <Button
        android:text="Sum \n of First two #'s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sumBT2"
        android:layout_below="@+id/sumBT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Product \n of above #'s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productBT"
        android:layout_below="@+id/inputText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/productBT2"
        android:layout_alignStart="@+id/productBT2" />

    <Button
        android:text="Product \n of first two #'s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productBT2"
        android:layout_below="@+id/productBT"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Average \n of above #'s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/averageBT"
        android:layout_below="@+id/sumBT2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sumBT2"
        android:layout_alignEnd="@+id/sumBT2" />

    <Button
        android:text="Average \n of First two #'s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/averageBT2"
        android:layout_below="@+id/averageBT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Factorial \n of above #'s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/factorialBT"
        android:layout_below="@+id/productBT2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/productBT2"
        android:layout_alignStart="@+id/productBT2" />

    <Button
        android:text="Factorial \n of first two #"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/factorialBT2"
        android:layout_below="@+id/factorialBT"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/factorialBT"
        android:layout_alignStart="@+id/factorialBT" />

    <TextView
        android:text="Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outputText"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_below="@+id/averageBT2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
